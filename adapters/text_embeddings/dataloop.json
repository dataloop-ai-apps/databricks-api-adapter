{
  "name": "databricks-text-embeddings",
  "displayName": "Databricks Text Embedding Models",
  "version": "0.0.6",
  "scope": "public",
  "description": "This application enables you to use text embeddings models available on Databricks. In order to use these models, it is necessary to have a Databricks serving endpoint and add a Databricks Token as a secret. For more information, consult the README files in the dataloop-ai-apps repo.",
  "attributes": {
    "Provider": "Databricks",
    "Deployed By": "Databricks",
    "License": "https://www.databricks.com/legal/open-model-license",
    "Category": "Model",
    "NLP": "Embeddings",
    "Media Type": [
      "Text"
    ]
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/databricks-api-adapter",
    "gitTag": "0.0.6"
  },
  "components": {
    "computeConfigs": [
      {
        "name": "databricks-text-embeddings-deploy",
        "runtime": {
          "podType": "regular-xs",
          "concurrency": 10,
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/cpu/openai:1.0.0",
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2
          }
        }
      }
    ],
    "modules": [
      {
        "name": "databricks-text-embeddings-module",
        "entryPoint": "adapters/text_embeddings/text_embeddings.py",
        "className": "TextEmbeddings",
        "computeConfig": "text-embeddings-deploy",
        "description": "Text Embeddings Module",
        "integrations": [
          "dl-dbrx-api-key"
        ],
        "initInputs": [
          {
            "type": "Model",
            "name": "model_entity"
          }
        ],
        "functions": [
          {
            "name": "embed_items",
            "input": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "The input items for embeddings."
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "The same input items for embeddings."
              },
              {
                "type": "Json",
                "name": "json",
                "description": "Embeddings of items."
              }
            ],
            "displayName": "Embed Items",
            "displayIcon": "",
            "description": "The inference function of the model."
          },
          {
            "name": "embed_dataset",
            "input": [
              {
                "type": "Dataset",
                "name": "dataset",
                "description": "The input dataset of the items required for prediction."
              },
              {
                "type": "Json",
                "name": "filters",
                "description": "The DQL in json format to get all the items required for prediction."
              }
            ],
            "output": [],
            "displayName": "Embed Dataset",
            "displayIcon": "",
            "description": "Inference function of the model on a dataset."
          }
        ]
      }
    ],
    "models": [
      {
        "name": "bge-small-en",
        "moduleName": "databricks-text-embeddings-module",
        "scope": "project",
        "status": "pre-trained",
        "configuration": {
          "base_url": "https://adb-824894719035605.5.azuredatabricks.net/serving-endpoints/",
          "model_name": "bge-small-en",
          "encoding_format": "float"
        },
        "description": "BGE-Small-EN is a lightweight English text embedding model by BAAI, designed for high-quality embeddings in resource-limited environments. In order to use this model, it is necessary to have a Databricks serving endpoint and add a Databricks Token as a secret. For more information, consult the README files in the dataloop-ai-apps repo."
      }
    ]
  }
}